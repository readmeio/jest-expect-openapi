{
  "name": "jest-expect-openapi",
  "version": "7.1.0",
  "description": "Jest/Vitest matcher for asserting valid OpenAPI definitions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts && npm run prettier && tsc",
    "prebuild": "rm -rf dist/",
    "prepack": "npm run build",
    "pretest": "npm run lint",
    "prettier": "prettier --check .",
    "test": "npm run test:jest && npm run test:vitest",
    "test:jest": "jest --coverage",
    "test:vitest": "vitest run --coverage"
  },
  "keywords": [
    "jest",
    "vitest",
    "openapi",
    "matchers",
    "expect",
    "extend",
    "extended",
    "test",
    "testing",
    "assertions"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/readmeio/jest-expect-openapi.git"
  },
  "bugs": {
    "url": "https://github.com/readmeio/jest-expect-openapi/issues"
  },
  "author": "Jon Ursenbach <jon@readme.io>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@readme/openapi-parser": "^2.5.0"
  },
  "peerDependencies": {
    "jest": "^29.0.2",
    "vitest": "^1.2.1"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@readme/eslint-config": "^13.3.1",
    "@types/jest": "^29.5.7",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vitest": "^1.2.1"
  },
  "prettier": "@readme/eslint-config/prettier"
}
